<body>
    <div class="banner-top d-none d-md-block" style="background: #d62828">
        <picture>
            <source media="(max-width: 567px)" srcset="//bizweb.dktcdn.net/thumb/large/100/558/309/themes/999496/assets/banner_top.jpg?1758009184577">
            <img alt="Banner top" width="1920" height="60" src="//bizweb.dktcdn.net/100/558/309/themes/999496/assets/banner_top.jpg?1758009184577">
        </picture>
    </div>

    <!-- Header -->
    <header class="header">
        <div class="header_main">
            <div class="container header_top">
                <img class="logo" src="~/images/logo-wb.png" alt="Alternate Text" />
                <div class="header_menu">
                    <a href="#" class="header_btn_category">
                        <i class="fa-solid fa-bars"></i>
                        Danh mục
                    </a>

                    <div class="search_smart">
                        <form action="/" method="get" class="header_search_form input-group" role="search">
                            <input type="text" name="query" required="" class="input-group-field auto-search search-auto form-control" placeholder="Bạn cần tìm gì..." autocomplete="off">
                            <button type="submit" class="icon-fallback-text" aria-label="Tìm kiếm" title="Tìm kiếm">
                                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M16.6725 16.6412L21 21M19 11C19 15.4183 15.4183 19 11 19C6.58172 19 3 15.4183 3 11C3 6.58172 6.58172 3 11 3C15.4183 3 19 6.58172 19 11Z" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
                            </button>
                        </form>
                    </div>

                    <!-- Thanh tiện ích -->
                    <div class="topbar_utility">
                        <div class="utility_item">
                            <i class="fas fa-headset"></i>
                            <span>Hotline<br>1900.5301</span>
                        </div>
                        <div class="utility_item">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Hệ thống<br>Showroom</span>
                        </div>
                        <div class="utility_item">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Tra cứu<br>đơn hàng</span>
                        </div>
                        <div class="utility_item">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Giỏ hàng</span>
                        </div>
                        <div class="utility_item">
                            <i class="fas fa-user"></i>
                            <span>Đăng nhập</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- main -->
    <main class="main">
        @RenderBody()
    </main>

    <!-- policy -->
    <section class="section_policy py-10">
        <div class="container">
            <div class="row">
                <div class="col-7 col-sm-5 col-lg-3 col-xl-3 col-fix margin-0">
                    <div class="section_policy_item">
                        <div class="icon">
                            <img src="~/images/img-policy-1.png" alt="image-policy" width="50" height="50" />
                        </div>
                        <div class="text">
                            <span class="title">Giao hàng toàn quốc</span>
                            <span class="des">Giao hàng trước trả tiền sau COD</span>
                        </div>
                    </div>
                </div>

                <div class="col-7 col-sm-5 col-lg-3 col-xl-3 col-fix margin-0">
                    <div class="section_policy_item">
                        <div class="icon">
                            <img src="~/images/img-policy-2.png" alt="image-policy" width="50" height="50" />
                        </div>
                        <div class="text">
                            <span class="title">Đổi trả dễ dàng</span>
                            <span class="des">Đổi mới trong 15 ngày đầu</span>
                        </div>
                    </div>
                </div>

                <div class="col-7 col-sm-5 col-lg-3 col-xl-3 col-fix margin-0">
                    <div class="section_policy_item">
                        <div class="icon">
                            <img src="~/images/img-policy-3.png" alt="image-policy" width="50" height="50" />
                        </div>
                        <div class="text">
                            <span class="title">Thanh toán tiện lợi </span>
                            <span class="des">Trả tiền mặt, chuyển khoản, trả góp 0%</span>
                        </div>
                    </div>
                </div>

                <div class="col-7 col-sm-5 col-lg-3 col-xl-3 col-fix margin-0">
                    <div class="section_policy_item">
                        <div class="icon">
                            <img src="~/images/img-policy-4.png" alt="image-policy" width="50" height="50" />
                        </div>
                        <div class="text">
                            <span class="title">Hỗ trợ nhiệt tình</span>
                            <span class="des">Tư vấn tổng đài miễn phí 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- footer -->
    <footer class="footer">
        <div class="top-footer">
            <div class="container">
                <div class="cus-regis-content">
                    <div class="icon">
                        <img width="50" height="50" class="lazyload loaded" src="~/images/email.png" data-src="//bizweb.dktcdn.net/100/558/309/themes/999496/assets/email.png?1758009184577" alt="mail chimp" data-was-processed="true">
                        <span>
                            <b>Nhận tin khuyến mãi</b>
                            <br />
                            Bạn vui lòng để lại Email để nhận thông tin
                            khuyến mãi từ Euro
                        </span>
                    </div>
                    <form id="mc-form" class="newsletter-form" data-toggle="validator" novalidate="true">
                        <input aria-label="Địa chỉ Email" type="email" class="form-control" placeholder="Nhập email nhận tin khuyến mãi" name="EMAIL" required="" autocomplete="off">
                        <button class="btn btn-default" type="submit" aria-label="Đăng ký nhận tin" name="subscribe">
                            <i class="fa-brands fa-pushed"></i>
                        </button>
                        <div class="mailchimp-alerts " style="margin-top: 5px;">
                            <div class="mailchimp-submitting"></div>
                            <div class="mailchimp-success"></div>
                            <div class="mailchimp-error"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

